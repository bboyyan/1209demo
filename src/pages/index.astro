---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/layout/Navbar.tsx';
import HeroSection from '../components/home/HeroSection.tsx';
import PhilosophySection from '../components/home/PhilosophySection.tsx';
import SignatureTreatment from '../components/home/SignatureTreatment.tsx';
import StatsSection from '../components/home/StatsSection.tsx';
import CTASection from '../components/home/CTASection.tsx';
import Footer from '../components/layout/Footer.astro';
import MobileStickyBar from '../components/ui/MobileStickyBar.tsx';
---

<BaseLayout title="LUMIÃˆRE SPA - Exclusive Care for Ladies">
  {/* Main Container */}
  <div class="w-full max-w-[1400px] bg-[#FAFAFA] md:rounded-[40px] shadow-none md:shadow-2xl overflow-hidden relative mx-auto transition-all duration-500">

    {/* Navigation */}
    <Navbar client:load />

    {/* Hero Section */}
    <HeroSection client:load />

    {/* Content Sections */}
    <div class="bg-[#FAFAFA] relative pt-20 md:pt-32 pb-20 px-6 md:px-16 overflow-hidden">

      {/* Background Text */}
      <div class="absolute top-20 right-0 text-[100px] md:text-[200px] leading-none font-['Playfair_Display'] text-neutral-100 opacity-60 pointer-events-none select-none z-0">
        Luxe
      </div>

      <div class="container mx-auto relative z-10">

        {/* Philosophy Section */}
        <PhilosophySection client:visible />

        {/* Signature Treatment */}
        <SignatureTreatment client:visible />

        {/* Stats Section */}
        <StatsSection client:visible />

        {/* CTA Section */}
        <CTASection client:visible />

      </div>
    </div>

    {/* Footer */}
    <Footer />

    {/* Mobile Sticky Bar */}
    <MobileStickyBar client:load />

  </div>
</BaseLayout>
